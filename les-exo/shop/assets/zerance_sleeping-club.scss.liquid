// home-custom-reviews.liquid

.reviews:before {
  border: none;
}

.reviews1 {
  background-color: inherit;
}

.reviews:after {
  display: none;
}

.reviews__text {
  font-size: 17px;
}

.reviews__author {
  font-size: 17px;
  color: black;
}

.reviews__image1 {
  margin-left: 0;
  width: auto;
  margin-top: 70px;
}

.reviews1 {
  right: 4%;
  left: auto;
  top: 0;
  margin-top: 70px;
}

.reviews__image2 {
  width: auto;
  position: absolute;
  right: 0;
  bottom: 0;
  margin-bottom: -50px
}

.animation-logo {
  width: auto;
  right: 40px;
}

.home-custom-reviews {
  background: none;
}

@media (max-width: 1300px) {
  .reviews1 {
    top: 0;
  }
}

